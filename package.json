{
    "name": "@1inch/fusion-sdk",
    "version": "0.1.13",
    "description": "1inch Fusion Mode SDK",
    "private": false,
    "main": "index.js",
    "types": "index.d.ts",
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:1inch/fusion-sdk.git"
    },
    "scripts": {
        "prebuild": "rm -rf dist && yarn run test:coverage",
        "build": "tsc --module commonjs -p tsconfig.build.json",
        "postbuild": "cp package.json dist && cp README.md dist",
        "lint": "eslint ./src --ext .js,.ts",
        "release": "standard-version",
        "test": "jest",
        "test:coverage": "jest --collectCoverage",
        "typecheck": "tsc --noEmit --skipLibCheck",
        "prettier": "prettier --write .",
        "prettier:check": "prettier --check .",
        "ci-pipeline": "yarn run lint && yarn run test && yarn run typecheck"
    },
    "dependencies": {
        "@ethersproject/bignumber": "^5.1.1",
        "@metamask/eth-sig-util": "^5.0.2",
        "bn.js": "^5.2.1",
        "web3": "^1.8.1",
        "ws": "^8.12.1",
        "tslib": "^2.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.13.16",
        "@babel/preset-env": "^7.13.15",
        "@babel/preset-typescript": "^7.13.0",
        "@types/jest": "^26.0.22",
        "@types/prompts": "^2.0.12",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "4",
        "axios": "^1.2.3",
        "babel-jest": "^26.6.3",
        "eslint": "7",
        "eslint-config-prettier": "^8.2.0",
        "eslint-config-standard-with-typescript": "^20.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "11",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "4",
        "eslint-plugin-unused-imports": "^1.1.1",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "ts-loader": "^9.0.2",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.4.0",
        "typescript": "4.7.4"
    },
    "peerDependencies": {
        "assert": "^2.0.0",
        "axios": ">=1 <2",
        "stream": "^0.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn run typecheck"
        }
    },
    "lint-staged": {
        "*.{js,ts,md,json}": [
            "yarn run prettier"
        ],
        "*.{js,ts}": [
            "yarn run lint"
        ]
    },
    "volta": {
        "node": "16.19.0",
        "yarn": "1.22.17"
    }
}
